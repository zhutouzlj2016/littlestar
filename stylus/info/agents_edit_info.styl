body
	background #EFEFF4
	color #323232
	
.header
	width 100%
	height 40px
	padding-top 20px
	background-color #ffffff
	position relative
	border-bottom 1px solid #E9EAED
	.icon-back
		position absolute
		top 20px
		left 0px
		width 40px
		height 40px
		background url(../../img/login/nav_back_icon@2x.png) no-repeat center
		background-size 10px 18px	
	.header_title
		display block
		width 100%
		height 40px
		line-height 40px
		text-align center
		font-size 20px

.info-cells
	background-color #fff
	margin-top 10px	
	padding 0px 15px
	border-bottom 1px solid #E9EAED
	border-top 1px solid #E9EAED
	.info-pic
		background url(../../img/info/log-in_user-head@2x.png) no-repeat left center
		background-size 25px 25px
	.info-cell
		display flex
		line-height 30px
		border-bottom 1px solid #f0f0f0
		position relative
		&:after
			content ""
			width 6.7px
			height 12px
			position absolute
			top 50%
			margin-top -6px
			right 0px
			background url(../../img/info/nav_icon_back@2x.png) no-repeat center
			background-size 6.7px 12px
	.info-name
		flex 3
		font-size 14px
		color #8C8C8C
	.info-content
		padding-right 20px
		flex 4
		font-size 14px
		margin 0px
		border none
		outline none
		
.image-cell		
	display flex
	margin-top 20px
	.image-blocks
		height 94px
		flex 1
		.image-block
			width 95px
			height 94px
			.img
				width 95px
				height 64px
				border-radius 6px
				background-color #878787
			.title
				color #8C8C8C
				font-size 12px
				text-align center
				height 30px
				line-height 30px
				margin 0px
		.image-block1
			float left
		.image-block2
			margin 0 auto
		.image-block3
			float right
			
		
		