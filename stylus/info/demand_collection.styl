body
	background #EFEFF4
	color #323232
	
.header
	width 100%
	height 40px
	padding-top 20px
	background-color #ffffff
	position relative
	border-bottom 1px solid #E9EAED
	.icon-back
		position absolute
		top 20px
		left 0px
		width 40px
		height 40px
		background url(../../img/login/nav_back_icon@2x.png) no-repeat center
		background-size 10px 18px	
	.header_title
		display block
		width 100%
		height 40px
		line-height 40px
		text-align center
		font-size 20px
.demand_cells
	margin-top 10px
	padding 0px 15px 
	.demand_cell
		padding-bottom 10px
		border-radius 5px
		box-shadow 0 0 1px 1px #e0e0e0
		background-color #fff
		.demand-title
			display flex
			height 45px
			line-height 45px
			padding 0px 15px
			border-bottom 1px solid #EBEBEE
			.d-t-name
				flex 1
				font-size 14px
			.d-t-tag
				color #fff
				font-size 10px
				padding 2px 0px
				width 50px
				margin 13px 0
				height 15px
				line-height 19px
				text-align center
				background-color #15B755
				display inline-block
				border-radius 5px
			    
			      
			      
		.demand-info
			font-size 12px
			margin 0px
			line-height 14px
			padding 10px 15px
			
	.demand-footer
		display flex
		height 25px
		line-height 25px
		padding 0px 15px
		.text-time
			flex 1
			color #828282
			font-size 12px
			text-align right 
		.btn-detail
			flex 1
			.btn-detail-word
				margin 0 auto
				width 90px
				height 25px
				background #EFEFF4
				text-align center
				font-size 12px
				border-radius 3px
.nav
	position relative
	display flex
	background-color #fff
	height 42px
	line-height 42px
	margin-top 5px
	border-top 1px solid #EBEBEE
	border-bottom 1px solid #EBEBEE
	
	.nav-demand
		position relative
		color #EB7946
		flex 1
		text-align center
		&:after
			content ""
			width 100%
			height 1px 
			position absolute
			bottom 0px
			left 0px
			background-color #EB7946
			z-index 5
			
	.nav-listing
		flex 1
		text-align center
	&:after
		content ""
		width 1px 
		height 30px 
		position absolute
		top 6px
		left 50%
		background-color #EBEBEE




















			