body
	background #EFEFF4
	color #323232
.tab_box
	height 40px
	padding-top 20px
	background-color #fff
	.tab_bar
		display flex
		width 70%
		height 28px
		margin 0 auto
		padding 0px
		list-style none
		border-radius 5px
		border 1px solid #ED692B
		color #ED692B
		.tab_bar-cell
			position relative
			flex 1
			line-height 28px
			text-align center
			&:after
				content ''
				position absolute
				top 0
				right 0
				display block
				width 1px
				height 28px
				background-color #ED692B
			&:last-child:after
				content ''
				display none
			&.active
				background-color #ED692B
				color #fff
.demand_cells
	margin-top 10px
	padding 0px 15px 
	.demand_cell
		padding-bottom 10px
		border-radius 5px
		box-shadow 0 0 1px 1px #e0e0e0
		background-color #fff
		.demand-title
			padding 0px 15px
			display flex
			height 38px
			line-height 38px
			margin-bottom 10px
			border-bottom 1px solid #EBEBEE
			.d-t-name
				flex 1
				font-size 14px
			.d-t-tag
				color #C6C6C6
				font-size 10px
		.demand-info
			font-size 12px
			margin 0px
			line-height 14px
			padding 0px 15px
			
	.demand-footer
		height 25px
		line-height 25px
		font-size 10px
		padding 0px 15px
		text-align right 
		color #ACACAC
